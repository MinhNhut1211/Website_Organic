@model IEnumerable<WebOrganicFood.Models.NguoiDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Trang Người Dùng</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table">
    <tr>

        <th>
            Họ Tên
        </th>
        <th>
            Ngày Sinh
        </th>
        <th>
            Số Điện Thoại
        </th>
        <th>
            Giới Tính
        </th>


        <th>
            Địa Chỉ
        </th>
        <th>
            Email
        </th>
       
        <th>
            Hành Động
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
       
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaNguoiDung }) |
            @Html.ActionLink("Xem", "Details", new { id = item.MaNguoiDung }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaNguoiDung })
        </td>
    </tr>
}

</table>
