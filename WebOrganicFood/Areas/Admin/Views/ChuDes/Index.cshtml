@model IEnumerable<WebOrganicFood.Models.Loai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Trang Loại</h2>

<p>
    @Html.ActionLink("Thêm Loại Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID Loại
        </th>
        <th>
            Tên Loại
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
       
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.IDLoai }) |
            @Html.ActionLink("Xem", "Details", new { id = item.IDLoai }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.IDLoai })
        </td>
    </tr>
}

</table>
