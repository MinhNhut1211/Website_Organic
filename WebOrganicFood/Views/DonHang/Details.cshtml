@model IEnumerable<WebOrganicFood.Models.ChiTietDonHang>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi Tiết Đơn Hàng</h2>

<table class="table">
    <tr>
        <th>
            Sản phẩm
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá / 1 sản phẩm
        </th>
        <th>
            Thành tiền
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.SanPham.TenSanPham
            </td>
            <td>
            <img width="120" height="120" src="@Url.Content("~/HinhAnh/" + @item.SanPham.HinhAnh)" />
            </td>

            <td>
                @item.SoLuong
            </td>
            <td>
                @String.Format("{0:0,0}", item.DonGia) VNĐ
            </td>
            <td>
                @String.Format("{0:0,0}", item.ThanhTien) VNĐ
            </td>
        </tr>
    }

</table>

