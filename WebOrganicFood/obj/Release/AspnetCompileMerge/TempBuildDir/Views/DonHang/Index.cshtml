
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<WebOrganicFood.Models.DonHang>
<link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css">
<link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
<link rel="stylesheet" href="~/css/elegant-icons.css" type="text/css">
<link rel="stylesheet" href="~/css/nice-select.css" type="text/css">
<link rel="stylesheet" href="~/css/jquery-ui.min.css" type="text/css">
<link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css">
<link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css">
<link rel="stylesheet" href="~/css/style.css" type="text/css">
<table class="table">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Tình trạng đơn hàng
        </th>
        <th>
            Thanh toán
        </th>
        <th>
            Số Điện Thoại
        </th>
        <th>
            Địa chỉ nhận hàng
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiDung.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>

            <td>
                @{ if (@item.TinhTrangGiaoHang == 0)
                    {
                        <h5 style="color:red">Đang chờ xác nhận. </h5>
                    }
                    else if (@item.TinhTrangGiaoHang == 1)
                    {
                        <h5 style="color:green">Đã xác nhận </h5>
                    }
                    else
                    {
                        <h5 style="color:orangered">Đang chờ xác nhận </h5>
                    }
                }
            </td>
            <td>
                @{ if (@item.ThanhToan == 1)
                    {
                        <div style="color:red">Thanh toán tiền mặt</div>
                    }
                    else if (@item.ThanhToan == 2)
                    {
                        <div style="color:brown">Thanh toán chuyển khoản</div> }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiDung.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiNhanHang)
            </td>
            <td>
                <button class="btn-primary">
                    @Html.ActionLink("Chi tiết", "Details","DonHang", new { id = item.MaDonHang }, new { @style = "color:white;" })
                </button>

            </td>
        </tr>
    }

</table>