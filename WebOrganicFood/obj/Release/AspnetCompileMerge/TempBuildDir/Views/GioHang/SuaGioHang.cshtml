@using WebOrganicFood.Models;
@model List<GioHang>
@{
    ViewBag.Title = "SuaGioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css">
<link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
<link rel="stylesheet" href="~/css/elegant-icons.css" type="text/css">
<link rel="stylesheet" href="~/css/nice-select.css" type="text/css">
<link rel="stylesheet" href="~/css/jquery-ui.min.css" type="text/css">
<link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css">
<link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css">
<link rel="stylesheet" href="~/css/style.css" type="text/css">
<section class="shoping-cart spad">
    <div class="container">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@Url.Content("~/HinhAnh/" + item.sAnhBia)" alt="">
                                        <h5>@item.sTensp</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @String.Format("{0:0,0}", item.dDonGia) VNĐ
                                    </td>
                                    @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMasp }))
                                    {
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    @Html.TextBox("txtSoLuong", item.iSoLuong, new { @iMaSP = item.iMasp })
                                                </div>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__total">
                                            @String.Format("{0:0,0}", item.ThanhTien) VNĐ
                                        </td>

                                        <td class="shoping__cart__item__close">
                                            <button class="btn-light">@Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSP = item.iMasp })</button>
                                            <input type="submit" value="Cập nhật" class="btn-secondary" />
                                        </td>
                                    }


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</section>


